.yui-b
  = render :partial => 'shared/admin_nav'

#yui-main
  .yui-b.box
    %h3= "Ads".l
    %table{"width"=>"100%"}
      %tr
        %th="Name".l
        %th="Frequency".l
        %th 
          ="Published".l
          \?
        %th="Run".l
        %th="Location".l
        %th &nbsp;

      - for ad in @ads
        %tr
          %td= link_to h(ad.name), ad_path(ad)
          %td= h ad.frequency
          %td= h ad.published?
          %td= h ad.time_constrained? ? "#{ad.start_date.to_formatted_s(:short)}-#{ad.end_date.to_formatted_s(:short)}" : "n/a"
          %td= h ad.location
          %td{:colspan => 3}
            = link_to 'Show'.l, ad_path(ad)
            |
            = link_to 'Edit'.l, edit_ad_path(ad)
            |
            = link_to 'Destroy'.l, ad_path(ad), :confirm => 'Are you sure?', :method => :delete
            
    %br
    = link_to 'New Ad'.l, new_ad_path
